; vim:ft=dosini
[colors]
background = ${xrdb:background:#ff0000}
foreground = ${xrdb:foreground:#ff0000}
separator = #928374
warn = ${xrdb:color1:#ff0000}

[global/wm]
margin-bottom = 0

[settings]
screenchange-reload = true

[bar/top]
background = ${colors.background}
fixed-center = false
font-0 = Hack:size=10;2
font-1 = FontAwesome:style=Regular:size=10;1
foreground = ${colors.foreground}
height = 27
modules-left = i3
modules-right = xbacklight separator volume separator cpu separator memory separator wlan separator battery0 separator battery1 separator temperature separator date
monitor = ${env:MONITOR:}
padding-right = 2
tray-position = right
width = 100%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-background = ${colors.background}
label-mode-foreground = ${colors.foreground}
label-mode-padding = 2

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
; label-visible-underline = ${self.label-focused-underline}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.background}
label-urgent-padding = 2

[module/xbacklight]
type = internal/xbacklight
label = " %percentage%%"
format-prefix = 

[module/cpu]
type = internal/cpu
format-prefix = 
interval = 2
label = " %percentage%%"

[module/memory]
type = internal/memory
format-prefix = 
interval = 5
label = " %percentage_used%%"

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 5

format-connected-prefix = 
label-connected = " %signal%%"

format-disconnected-prefix = 
label-disconnected = " -"

[module/date]
type = internal/date
date = "%a %d.%m"
interval = 5
label = %date% - %time%
time = %H:%M

[module/volume]
type = internal/alsa

format-muted-prefix = 
label-muted = " -"

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
ramp-volume-0 = 
ramp-volume-1 = 

[module/battery0]
type = internal/battery
battery = BAT0
full-at = 95

format-charging-prefix = 
label-charging = " %percentage%%"

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 

format-full-prefix = 
label-full = " %percentage%%"

[module/battery1]
inherit = module/battery0
battery = BAT1

[module/temperature]
type = internal/temperature
warn-temperature = 60

format-prefix = 
label = " %temperature-c%"

format-warn-prefix = 
format-warn-foreground = ${colors.warn}
label-warn = " %temperature-c%"

[module/separator]
type = custom/text
content = |
content-foreground = ${colors.separator}
content-padding = 2
