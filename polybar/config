; vim:ft=dosini
[colors]
background = ${xrdb:background:#ff0000}
foreground = ${xrdb:foreground:#ff0000}
warn = ${xrdb:color1:#ff0000}

[global/wm]
margin-bottom = 0

[settings]
screenchange-reload = true

[bar/top]
background = ${colors.background}
fixed-center = false
font-0 = Hack:size=10;2
font-1 = FontAwesome:style=Regular:size=10;1
foreground = ${colors.foreground}
height = 27
modules-left = i3
modules-right = xbacklight volume cpu memory wlan0 wlan1 battery0 battery1 temperature date
monitor = ${env:MONITOR:}
module-margin = 2
padding-right = 2
separator = %{F#928374}|%{F-}
tray-position = right
width = 100%

[module/i3]
type = internal/i3
enable-scroll = false
format = <label-state> <label-mode>
index-sort = true
pin-workspaces = true
wrapping-scroll = false

label-mode-background = ${colors.background}
label-mode-foreground = ${colors.foreground}
label-mode-padding = 2

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = ${colors.foreground}
label-focused-foreground = ${colors.background}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${colors.background}
label-visible-padding = 2

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.background}
label-urgent-padding = 2

[module/xbacklight]
type = internal/xbacklight
label = " %percentage%%"
format-prefix = 
enable-scroll = false

[module/cpu]
type = internal/cpu
format-prefix = 
interval = 2
label = " %percentage%%"

[module/memory]
type = internal/memory
format-prefix = 
interval = 5
label = " %percentage_used%%"

[module/wlan0]
type = internal/network
interface = wlp4s0
interval = 5

format-connected-prefix = 
label-connected = " %signal%%"

format-disconnected-prefix = 
label-disconnected = " -"

[module/wlan1]
inherit = module/wlan0
interface = wlp3s0

[module/date]
type = internal/date
date = "%a %d.%m"
interval = 5
label = %date% - %time%
time = %H:%M

[module/volume]
type = internal/pulseaudio

format-muted-prefix = 
label-muted = " -"

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
ramp-volume-0 = 
ramp-volume-1 = 

[module/battery0]
type = internal/battery
battery = BAT0
full-at = 95

format-charging-prefix = 
label-charging = " %percentage%%"

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%%
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 

format-full-prefix = 
label-full = " %percentage%%"

[module/battery1]
inherit = module/battery0
battery = BAT1

[module/temperature]
type = internal/temperature
warn-temperature = 60

format-prefix = 
label = " %temperature-c%"

format-warn-prefix = 
format-warn-foreground = ${colors.warn}
label-warn = " %temperature-c%"
